@model Blog.Models.BlogPost

@{
    ViewBag.Title = "Details";
}

<!--JQUERY DOT DOT DOT-->  
<script src="~/Views/BlogPosts/jquery.dotdotdot.min.js"></script>
<!--JQUERY DOT DOT DOT ENDS-->  

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <!-- Blog Post -->
           <h3>Jessica Ansong</h3>
            <ul class="text-muted list-inline">
                <li><i class="fa fa-user"></i> <a href="profile.html">@Html.DisplayFor(model => model.Title)</a></li> 
                <li><i class="fa fa-calendar"></i>@Html.DisplayFor(model => model.Created) <!--model gets model gets created on-->
</li>
                
                <li><i class="fa fa-comments-o"></i> Comments </li>
            </ul>
            <hr>
            <!--==========================NEW POST========================-->

            <p class="blog-text">
          
            <p class="lead">
                @Html.Raw(Model.Blog)
            </p>
         
                
            <!-- New comment form -->
            <div class="new-comment">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <div class="col-sm-2 hidden-xs">
                            <img src="img/face1.jpg" alt="..." class="img-responsive">
                        </div>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" placeholder="Leave a message..."></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-dark btn-sm">Post comment</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Comments list -->
            <h4>21 comments</h4>
            <hr>
            
        </div>
        <div class="col-sm-4">
          

            <!-- Tags -->
            <h3 class="hl">Story tags</h3>
            <hr>
            <br />

            <!-- Recently Added -->

        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>